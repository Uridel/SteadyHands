<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    tools:context="com.example.kevin.infrastructureapp.MainActivity">

<!--AcceleroMeasure-->
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:text="Accelero Measured:"
        android:layout_height="wrap_content"
        android:id="@+id/AcceleroText"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="63dp" />

    <TextView
        android:id="@+id/AcceleroResult"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AcceleroText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ProximityResult"
        android:layout_alignStart="@+id/ProximityResult" />

    <!--LightMeasuremant-->
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:text="Last Time spent in close proximity:"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/ProximityResult"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ProximityResult"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

<!--Debug-->
    <TextView
        android:id="@+id/Debug"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ProximityResult"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
